{
  "name": "vite-plugin-bookmarklet",
  "version": "0.0.0",
  "description": "A Vite plugin to import scripts as bookmarklets",
  "license": "MIT",
  "author": "Jan T. Sott",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/vite-plugin-bookmarklet"
  },
  "keywords": [
    "vite-plugin",
    "certificate",
    "https",
    "ssl",
    "tls"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/plugin.js",
      "types": "./dist/plugin.d.ts"
    },
    "./client": {
      "types": "./client.d.ts"
    }
  },
  "types": "./dist/plugin.d.ts",
  "engines": {
    "node": "^18.0.0 || ^20.0.0 || >=22.0.0"
  },
  "files": [
    "dist/",
    "client.d.ts",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "biome check --no-errors-on-unmatched --vcs-enabled=true --vcs-use-ignore-file=true",
    "prepack": "npm run build",
    "prepare": "lefthook install",
    "publish:jsr": "deno publish",
    "publish:npm": "np --any-branch",
    "server": "vite",
    "test": "concurrently -n 'server,client' -c 'blue,green' 'npm:test:*'",
    "test:e2e": "playwright test",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "log-symbols": "^7.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.52.0",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^22.15.21",
    "@vitest/browser": "^3.1.4",
    "concurrently": "^9.1.2",
    "lefthook": "^1.11.13",
    "np": "^10.2.0",
    "playwright": "^1.52.0",
    "tsdown": "^0.12.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || >=6.0.0"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
