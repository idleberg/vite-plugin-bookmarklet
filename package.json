{
	"name": "vite-plugin-bookmarklet",
	"version": "0.3.2",
	"description": "A Vite plugin to import scripts as bookmarklets",
	"license": "MIT",
	"author": "Jan T. Sott",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/vite-plugin-bookmarklet.git"
	},
	"keywords": [
		"vite-plugin",
		"bookmarklet"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/plugin.d.ts",
			"import": "./dist/plugin.mjs"
		},
		"./client": {
			"types": "./client.d.ts"
		}
	},
	"types": "./dist/plugin.d.ts",
	"engines": {
		"node": "^20.19.0 || >=22.12.0"
	},
	"files": [
		"dist/",
		"client.d.ts",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:e18e": "e18e-cli analyze",
		"prepack": "npm run build",
		"publish:jsr": "deno publish",
		"publish:npm": "np --any-branch",
		"server": "vite",
		"test": "concurrently -n 'server,client' -c 'blue,green' 'npm:test:*'",
		"test:e2e": "playwright test",
		"test:unit": "vitest run"
	},
	"dependencies": {
		"log-symbols": "^7.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@idleberg/configs": "^0.4.1",
		"@playwright/test": "^1.57.0",
		"@types/node": "^24.10.1",
		"@vitest/browser": "^4.0.15",
		"concurrently": "^9.2.1",
		"np": "^10.2.0",
		"playwright": "^1.57.0",
		"tsdown": "^0.18.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"vitest": "^4.0.15"
	},
	"peerDependencies": {
		"vite": "^5.0.0 || ^6.0.0 || >=7.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"lefthook"
		]
	},
	"packageManager": "pnpm@10.17.0+sha512.fce8a3dd29a4ed2ec566fb53efbb04d8c44a0f05bc6f24a73046910fb9c3ce7afa35a0980500668fa3573345bd644644fa98338fa168235c80f4aa17aa17fbef"
}
